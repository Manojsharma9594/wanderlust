<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2">
    <h3 class="mt-4">Listing Details</h3>
  </div>
  <div class="col-6 offset-2">
    <div>
      <img
        src="<%=listing.image.url || listing.image %>"
        class="card-img-top show-img mb-3"
        alt="listing_image"
      />
      <div class="card-body mb-3">
        <%=listing.title %> <br />
        <%=listing.description %><br />
        &#8377;<%=listing.price.toLocaleString("en-IN")%><br />
        <%=listing.location %><br />
        <%=listing.country %><br />
      </div>
    </div>
  </div>
  <div class="mb-5">
    <a href="/listings/<%= listing.id %>/edit" class="btn offset-2"
      ><button>Edit</button></a
    >

    <form
      method="POST"
      action="/listing/<%= listing.id %>?_method=DELETE"
      class="btn"
    >
      <button class="delete-btn">Delete</button>
    </form>
  </div>
</div>
